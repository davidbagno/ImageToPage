@namespace AzureLogin.Shared.Components

<div class="card glass-card border-0 shadow-sm mb-3" style="border-radius: 12px; overflow: hidden;">
    <div class="user-badge">
        <div class="d-flex justify-content-between align-items-center position-relative">
            <div class="d-flex align-items-center gap-3">
                <div style="width: 50px; height: 50px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                    üë§
                </div>
                <div>
                    <h5 class="mb-0 text-white fw-bold">@UserName</h5>
                    <small style="color: rgba(255,255,255,0.85);">Connected to @DeploymentName</small>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-light btn-sm fw-semibold" style="border-radius: 10px; padding: 8px 16px;" @onclick="OnShowSettings" title="Service Settings">
                    ‚öôÔ∏è Settings
                </button>
                <button class="btn btn-light btn-sm fw-semibold" style="border-radius: 10px; padding: 8px 16px;" @onclick="OnSignOut">
                    Sign Out
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .glass-card {
        background: #ffffff;
        border: 1px solid #e2e4e8;
        transition: box-shadow 0.2s ease;
    }
    
    .user-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 14px 18px;
        border-radius: 10px;
    }
</style>

@code {
    [Parameter] public string UserName { get; set; } = "User";
    [Parameter] public string DeploymentName { get; set; } = "";
    [Parameter] public EventCallback OnShowSettings { get; set; }
    [Parameter] public EventCallback OnSignOut { get; set; }
}
