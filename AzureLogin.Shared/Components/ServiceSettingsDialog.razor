@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public AzureLogin.Shared.Services.AzureOpenAISettings Settings { get; set; } = new();
    [Parameter] public EventCallback<AzureLogin.Shared.Services.AzureOpenAISettings> OnSave { get; set; }

    private HashSet<string> expandedSections = new() { "openai" };
    private bool showVisionKey;
    private bool showDocIntKey;
    private bool showCustomVisionKey;
    private bool showVideoKey;
    private string? statusMessage;
    private string statusClass = "";

    private bool IsOpenAIConfigured => !string.IsNullOrEmpty(Settings?.Endpoint) && !Settings.Endpoint.Contains("YOUR-");
    private bool IsVisionConfigured => !string.IsNullOrEmpty(Settings?.VisionEndpoint) && !Settings.VisionEndpoint.Contains("YOUR-") && !string.IsNullOrEmpty(Settings?.VisionKey) && !Settings.VisionKey.Contains("YOUR-");
    private bool IsDocIntelligenceConfigured => !string.IsNullOrEmpty(Settings?.DocumentIntelligenceEndpoint) && !Settings.DocumentIntelligenceEndpoint.Contains("YOUR-") && !string.IsNullOrEmpty(Settings?.DocumentIntelligenceKey) && !Settings.DocumentIntelligenceKey.Contains("YOUR-");
    private bool IsCustomVisionConfigured => !string.IsNullOrEmpty(Settings?.CustomVisionEndpoint) && !Settings.CustomVisionEndpoint.Contains("YOUR-") && !string.IsNullOrEmpty(Settings?.CustomVisionKey) && !Settings.CustomVisionKey.Contains("YOUR-");
    private bool IsVideoIndexerConfigured => !string.IsNullOrEmpty(Settings?.VideoIndexerAccountId) && !Settings.VideoIndexerAccountId.Contains("YOUR-") && !string.IsNullOrEmpty(Settings?.VideoIndexerApiKey) && !Settings.VideoIndexerApiKey.Contains("YOUR-");

    private int ConfiguredServicesCount =>
        (IsOpenAIConfigured ? 1 : 0) +
        (IsVisionConfigured ? 1 : 0) +
        (IsDocIntelligenceConfigured ? 1 : 0) +
        (IsCustomVisionConfigured ? 1 : 0) +
        (IsVideoIndexerConfigured ? 1 : 0);

    private void ToggleSection(string section)
    {
        if (expandedSections.Contains(section))
            expandedSections.Remove(section);
        else
            expandedSections.Add(section);
    }

    private async Task Close()
    {
        IsVisible = false;
        await IsVisibleChanged.InvokeAsync(false);
        statusMessage = null;
    }

    private async Task SaveSettings()
    {
        try
        {
            // Save to localStorage for persistence
            var json = System.Text.Json.JsonSerializer.Serialize(Settings);
            await JS.InvokeVoidAsync("localStorage.setItem", "AzureAISettings", json);
            
            await OnSave.InvokeAsync(Settings);
            
            statusMessage = "‚úÖ Settings saved successfully!";
            statusClass = "success";
            
            // Auto-close after 1.5 seconds
            await Task.Delay(1500);
            await Close();
        }
        catch (Exception ex)
        {
            statusMessage = $"‚ùå Failed to save: {ex.Message}";
            statusClass = "error";
        }
    }

    private void ResetToDefaults()
    {
        Settings = new AzureLogin.Shared.Services.AzureOpenAISettings();
        statusMessage = "Settings reset to defaults. Click Save to apply.";
        statusClass = "success";
    }

    protected override async Task OnInitializedAsync()
    {
        // First, try to load any saved overrides from localStorage
        try
        {
            var json = await JS.InvokeAsync<string>("localStorage.getItem", "AzureAISettings");
            if (!string.IsNullOrEmpty(json))
            {
                var saved = System.Text.Json.JsonSerializer.Deserialize<AzureLogin.Shared.Services.AzureOpenAISettings>(json);
                if (saved != null)
                {
                    // Merge saved settings - only override if the saved value is not empty/placeholder
                    MergeSettings(saved);
                }
            }
        }
        catch
        {
            // Use parameter settings if localStorage fails
        }
    }
    
    private void MergeSettings(AzureLogin.Shared.Services.AzureOpenAISettings saved)
    {
        // Only override Settings with saved values if they are not empty/placeholder values
        if (!string.IsNullOrEmpty(saved.Endpoint) && !saved.Endpoint.Contains("YOUR-"))
            Settings.Endpoint = saved.Endpoint;
        if (!string.IsNullOrEmpty(saved.SubscriptionId) && !saved.SubscriptionId.Contains("YOUR-"))
            Settings.SubscriptionId = saved.SubscriptionId;
